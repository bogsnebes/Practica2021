<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#EBEBFF">

    <ImageView
        android:id="@+id/imMessages"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/descr_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNameMessages"
        android:layout_width="210dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Вася Пупкин"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imMessages"
        app:layout_constraintTop_toTopOf="@+id/imMessages" />

    <TextView
        android:id="@+id/tvDescrMessages"
        android:layout_width="243dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Привет. Занят ?"
        app:layout_constraintStart_toEndOf="@+id/imMessages"
        app:layout_constraintTop_toBottomOf="@+id/tvNameMessages" />
</androidx.constraintlayout.widget.ConstraintLayout>